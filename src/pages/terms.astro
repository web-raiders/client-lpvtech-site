---
import { Common } from '@components/index';
import Layout from '@components/layout.astro';
import { Queries } from '@utils/index';
import { sanityClient } from "sanity:client";
import { TERMS_PAGE_DESCRIPTION } from '@utils/constants'

const terms = await sanityClient.fetch(Queries.terms);
---

<Layout title='Privacy Policy' description={TERMS_PAGE_DESCRIPTION}>
    <!-- Hero Section -->
    <Common.Hero backgroundImage={'/artifacts/texture-photovoltaic.jpg'} header='Terms & Conditions' />

    <section class="w-full min-h-screen md:min-h-[40vh] py-10 lg:pb-20">
        <Common.Container>
            <div class="w-full mt-2 md:mt-5">
                <h6 class="text=[16px] md:text-[20px] md:text-[30px] text-darkBlue font-bold text-center">LPV Technologies Terms & Conditions</h6>
                <!-- Policies -->
                <Common.Faqs data={terms} client:load />
            </div>
        </Common.Container>
    </section>
</Layout>