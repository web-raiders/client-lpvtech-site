---
import { Common } from '@components/index';
import Layout from '@components/layout.astro';
import { PrivacyImg } from '@assets/images'
import { Queries } from '@utils/index';
import { sanityClient } from "sanity:client";

const terms = await sanityClient.fetch(Queries.terms);
---

<Layout title='LpvTech Website - Privacy Policy'>
    <!-- Hero Section -->
    <Common.Hero backgroundImage={PrivacyImg} header='Terms & Conditions' />

    <section class="w-full min-h-screen mt-20 pb-20">
        <Common.Container>
            <div class="w-full mt-20">
                <h6 class="text-[30px] text-darkBlue font-bold text-center">LPV Technologies Terms & Conditions</h6>
                <!-- Policies -->
                <Common.Faqs data={terms} client:load />
            </div>
        </Common.Container>
    </section>
</Layout>