---
import { Common } from '@components/index';
import Layout from '@components/layout.astro';
import { PrivacyImg, PolicyImage } from '@assets/images'
import { Image } from 'astro:assets'; 
import { Queries } from '@utils/index';
import { sanityClient } from "sanity:client";

const policies = await sanityClient.fetch(Queries.policy);
---

<Layout title='LpvTech Website - Privacy Policy'>
    <!-- Hero Section -->
    <Common.Hero backgroundImage={PrivacyImg} header='Privacy Policy' caption='Your Privacy, Our Priority' />

    <section class="w-full min-h-screen mt-20 pb-20">
        <Common.Container flex='flex-col'>
            <!-- <div class="flex flex-col justify-center items-center">
                <Image src={PolicyImage} alt="policy image" class={'w-[80%] h-[500px]'}  />
            </div> -->
            <div class="w-full mt-20">
                <h6 class="text-[48px] text-darkBlue font-bold">Our Policy</h6>
                <!-- Policies -->
                <Common.Faqs data={policies} client:load />
            </div>
        </Common.Container>
    </section>
</Layout>