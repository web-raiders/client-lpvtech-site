---
import { SocialIcons } from '@components/common';
import { Common } from '@components/index';
import Layout from '@components/layout.astro';
import { Data } from '@utils/index';
---

<Layout title='Ipvtech Website - Contact Us'>
    <!-- Hero Section -->
    <section class="pt-40 w-full min-h-[60vh] bg-no-repeat bg-cover bg-center" style={{ backgroundImage: `linear-gradient(rgba(0, 23, 23, 0.3), rgba(0, 23, 23, 0.3)), url(/images/offset.jpg)`}}>
        <div class="w-2/5 mx-auto text-center">
            <h1 class="text-[48px] text-white font-bold">Contact us</h1>
            <h4 class="text-[26px] mt-5 text-white font-semibold leading-[30px]">
                Start the conversation to established good relationship and business.
            </h4>
        </div>
    </section>

    <!-- Feedback Section -->
    <section class="w-full min-h-screen py-32">
        <Common.Container>
            <div class="flex gap-x-20">
                <div class="w-[40%] flex-col mt-20">
                    <!-- Left Content -->
                    <h6 class="uppercase text-base text-[#0fcc7c] font-bold">Send us a message</h6>
                    <h2 class="text-[40px] text-darkBlue font-bold mt-3 leading-[50px]">
                        Have a question or feedback?
                    </h2>
                    <p class="text-gray-500 mt-5 border-b border-gray-200 pb-10">
                        Vulputate commodo himenaeos mattis dis letius ad. 
                        Inceptos velit et imperdiet phasellus mus.
                    </p>
                    <div class="flex mt-5 gap-x-5">
                        <h4 class="text-darkBlue text-[25px] font-semibold">Follow Us :</h4>
                        <div class="h-[24px] cursor-pointer">
                            <SocialIcons size='24px' />
                        </div>
                    </div>
                </div>
                <div class="w-[50%] shadow-2xl rounded-2xl">
                    <div class="w-full">
                        <Common.Form padding={true} contact={true} />
                    </div>
                </div>
            </div>
        </Common.Container>
    </section>

    <!-- Map -->
    <section class="w-full min-h-screen">
            <div class="flex h-[100%]">
                <!-- Map Component -->
                 <div class="w-2/4 h-[auto]">
                    <iframe 
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3964.631666332971!2d3.4428553758847267!3d6.441322424111006!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x103bf4e2329cccd9%3A0xfe448b5f92a8f738!2s19b%20Ilabere%20Ave%2C%20Ikoyi%2C%20Lagos%20106104%2C%20Lagos!5e0!3m2!1sen!2sng!4v1721985430514!5m2!1sen!2sng" 
                    width="100%" 
                    height="100%" 
                    style="border:0;" 
                    allowfullscreen="true" 
                    loading="lazy" 
                    referrerpolicy="no-referrer-when-downgrade"
                    ></iframe>
                </div>
                <div class="w-2/4 h-full bg-[#00384F] pb-20">
                    <Common.Container>
                        <div class="flex-col pt-20">
                            <h6 class="uppercase text-base text-[#0fcc7c] font-bold">Get in touch</h6>
                            <h2 class="text-[40px] text-white font-bold mt-3 leading-[50px]">
                                Seamless Communication, Global Impact.
                            </h2>
                            <p class="text-gray-200 mt-5 border-b border-gray-600 pb-10">
                                Eget luctus fermentum eros pretium nostra. Finibus vestibulum efficitur ultricies eros phasellus venenatis himenaeos purus suspendisse.
                            </p>
                            <div class="mt-10 flex-col">
                                {
                                    Data.contactList.map(item => (
                                        <div class="flex gap-x-5 mb-5">
                                            <div class="h-full">
                                                <div class={`w-[max-content] p-3 mx-auto bg-[#0fcc7c] rounded-full`}>
								                    <item.icon size={'35px'} color="#fff" />
							                    </div>
                                            </div>
                                            <div class="w-3/4 flex-col flex-wrap ml-0">
                                                <h3 class="text-[18px] font-bold text-white">{item.title}</h4>
                                                <div class="flex-col">
                                                    <p class="text-base text-gray-400 mt-1 pr-20">
                                                        {item.headingOne}
                                                    </p>
                                                    <p class="text-base text-gray-400 mt-1 pr-20">
                                                        {item.headingTwo}
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    ))
                                }
                            </div>
                        </div>
                    </Common.Container>
                </div>
            </div>
    </section>
</Layout>