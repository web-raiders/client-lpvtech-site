---
import { IoMdMail } from "react-icons/io";
import { FaRegCalendarAlt } from "react-icons/fa";
import { SocialIcons } from "../common";
import { Logo } from "@assets/images";
---

<nav class="w-full bg-white">
    <div class="container flex flex-row items-center justify-between mx-0 md:mx-auto p-4 md:w-4/5">
        <div class="mr-3 md:ml-0">
            <a href='/'><img src={Logo} alt='logo' width={"100"} height={"100"} /></a>
        </div>
        <div class="flex -mr-3 md:mr-0">
            <div class="inline-flex">
                <span class="pt-.5 pr-1">
                    <FaRegCalendarAlt color={"#0FCC7C"} />
                </span>
                <span class="xs:text-xs text-darkBlue text-sm">09062892870</span>
            </div> 
            <div class="inline-flex ml-1 md:ml-3">
                <span class="pt-.5 pr-1">
                    <IoMdMail color={"#0FCC7C"} />
                </span>
                <span class="xs:text-xs text-darkBlue text-sm">info@lpvtechnolgies.com</span>
            </div>
        </div>
        <div class="hidden md:flex md:w-50">
            <SocialIcons />
        </div>
    </div>
</nav>