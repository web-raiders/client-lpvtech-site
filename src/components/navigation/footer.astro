---
import { Container } from "../common";
import { Logo } from "@assets/images";
import { Data } from "@utils/index";
import { RiArrowRightSLine } from "react-icons/ri";
import { MdLocalPhone } from "react-icons/md";
import { TiSocialFacebook, TiSocialTwitter } from "react-icons/ti";
import { PiInstagramLogo } from "react-icons/pi";
---

<footer class="w-full h-[400px] bg-[#e1f5ec]">
    <Container>
        <!-- Grid Columns -->
        <div class="grid grid-cols-4 gap-x-10 mt-[100px]">
            <!-- Column 1 -->
            <div>
                <img src={Logo} alt={"logo"} width={"200"} height={"200"} />
                <p class="text-deepBlue mt-5">24, Karimu Kotun Street, Victoria Island, Lagos - Nigeria</p>
            </div>

            <!-- Column 2 -->
            <div>
                <h4 class="text-[24px] font-semibold text-darkBlue">Company</h4>
                <ul class="mt-5 cursor-pointer">
                    {
                        Data.footer_company.map(item => (
                            <div class="flex mb-3">
                                <RiArrowRightSLine color={"green"} size={"24px"} />
                                <a href={item.path} class="font-semibold text-darkBlue text-[17px]">{item.link}</a>
                            </div>
                        ))
                    }
                </ul>
            </div>

            <!-- Column 3 -->
            <div>
                <h4 class="text-[24px] font-semibold text-darkBlue">Support</h4>
                <ul class="mt-5 cursor-pointer">
                    {
                        Data.footer_support.map(item => (
                            <div class="flex mb-3">
                                <RiArrowRightSLine color={"green"} size={"24px"} />
                                <a href={item.path} class="font-semibold text-darkBlue text-[17px]">{item.link}</a>
                            </div>
                        ))
                    }
                </ul>
            </div>

            <!-- Column 4 -->
            <div class="mt-1">
                <h3 class="text-[18px] text-darkBlue font-bold">24/7 Emergency Service</h3>
                <div class="flex mt-2">
                    <MdLocalPhone size={"24px"} color="green" className="mt-2" />
                    <p class="text-[24px] text-green">+(234)-8180907820</p>
                </div>
                <div class="flex gap-x-2 mt-4">
                    <div class="bg-cyan-900 p-1">
                        <TiSocialFacebook color="#fff" size={'24px'} />
                    </div>
                    <div class="bg-cyan-900 p-1">
                        <TiSocialTwitter color="#fff" size={'24px'} />
                    </div>
                    <div class="bg-cyan-900 p-1">
                        <PiInstagramLogo color="#fff" size={'24px'} />
                    </div>
                </div>
            </div>
        </div>
    </Container>
</footer>