---
import { Data } from "@utils/index";
import Container from "./container.astro";
import { Image } from "astro:assets";

const { page ='landing'} = Astro.props;
interface Props {
    page?: string;
}
---

<section class=`w-full ${page === 'landing' ? 'mt-32' : 'mt-0'}`>
    <Container>
        <!-- Background card -->
        <div class="w-full h-auto mb-0 px-5 py-7 bg-[#F5F7F8] rounded-xl md:mb-18">
            <div class="w-[100%] mx-auto flex-col justify-center items-center md:w-[90%]">
                <h3 class="text-center font-bold text-[20px] md:text-[28px]">LPV Technologies is trusted by 6+ million users in <br /> 175+ countries.</h3>
                <!-- Grid container -->
                <div class="grid grid-cols-2 gap-2 my-10 md:grid-cols-4">
                    {
                        Data.clients.map(item => (
                            <div class="w-[max-content] p-6 bg-white rounded-[10px] flex justify-center items-center cursor-pointer md:w-[250px] md:h-[100px] md:p-0">
                                <Image src={item.img} alt="client" width={100} height={100} class={'grayscale hover:grayscale-0'} />
                            </div>
                        ))
                    }
                </div>
            </div>
        </div>
    </Container>
</section>