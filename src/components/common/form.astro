---
import Button from "./button"
const { padding = false, contact = false} = Astro.props;
interface Props {
    padding?: boolean;
    contact?: boolean
}
---

<form class=`mt-3 px-7 ${padding && 'py-10'}`>
    <!-- First Input Grid -->
                <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                    <div class="sm:col-span-3">
                        <label for="name" class="block text-sm font-medium leading-6 text-gray-900">Name <span class="text-red-500">*</span></label>
                        <div class="mt-2">
                          <input type="text" name="name" id="name" placeholder="Name" class="block w-full rounded-md border-0 py-1.5 bg-[#F5F7F8] px-5 placeholder:text-gray-400 focus:outline-none focus:ring focus:bg-transparent sm:text-sm sm:leading-6">
                        </div>
                    </div>
                    <div class="sm:col-span-3">
                        <label for="company" class="block text-sm font-medium leading-6 text-gray-900">Company</label>
                        <div class="mt-2">
                          <input type="text" name="company" id="company" placeholder="Company" class="block w-full rounded-md border-0 py-1.5 bg-[#F5F7F8] px-5 placeholder:text-gray-400 focus:outline-none focus:ring focus:bg-transparent sm:text-sm sm:leading-6">
                        </div>
                    </div>
                </div>
                <!-- Second Input grid -->
                <div class="grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6 mt-5">
                    <div class="sm:col-span-3">
                        <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email <span class="text-red-500">*</span></label>
                        <div class="mt-2">
                          <input type="email" name="email" id="email" placeholder="Email" class="block w-full rounded-md border-0 py-1.5 bg-[#F5F7F8] px-5 placeholder:text-gray-400 focus:outline-none focus:ring focus:bg-transparent sm:text-sm sm:leading-6">
                        </div>
                    </div>
                    <div class="sm:col-span-3">
                        <label for="phone" class="block text-sm font-medium leading-6 text-gray-900">Phone</label>
                        <div class="mt-2">
                          <input type="text" name="phone" id="phone" placeholder="Phone" class="block w-full rounded-md border-0 py-1.5 bg-[#F5F7F8] px-5 placeholder:text-gray-400 focus:outline-none focus:ring focus:bg-transparent sm:text-sm sm:leading-6">
                        </div>
                    </div>
                </div>
    
                <!-- Third Input Grid -->
                <div class="col-span-full mt-5">
                    <label for="subject" class="block text-sm font-medium leading-6 text-gray-900">Subject <span class="text-red-500">*</span></label>
                    <div class="mt-2">
                        <input type="text" name="subject" id="subject" placeholder="Subject" class="block w-full rounded-md border-0 py-1.5 bg-[#F5F7F8] px-5 placeholder:text-gray-400 focus:outline-none focus:ring focus:bg-transparent sm:text-sm sm:leading-6">
                    </div>
                </div>
    
                <!-- Fourth Input Grid -->
                <div class="col-span-full mt-5">
                    <label for="message" class="block text-sm font-medium leading-6 text-gray-900">Message</label>
                    <div class="mt-2">
                      <textarea id="message" name="message" rows="3" placeholder="Message" class="block w-full rounded-md border-0 py-1.5 bg-[#F5F7F8] px-5 placeholder:text-gray-400 focus:outline-none focus:ring focus:bg-transparent sm:text-sm sm:leading-6"></textarea>
                    </div>
                </div>
    
                <!-- Button -->
                <div class="col-span-full my-5">
                    <Button path="#" text={contact ? "Send Message" : "Book Now"} className=`block ${contact ? 'w-[max-content]' : 'w-full'} ${contact && 'px-3'} ${contact ? 'py-2' : 'py-3'} ${contact ? 'text-base' : 'text-[18px]'} text-center text-white text-[14px] bg-green rounded-full baseline hover:bg-darkBlue` />
                </div>
            </form>
        </div>
    </div>
</form>