---
import Button from "./button";
import { Counter } from "../helpers"

const { page = 'landing' } = Astro.props;
interface Props {
    page?: string
}
---


<section class={`${page === 'services' ? 'my-0' : 'my-20'} w-full pt-20 min-h-[60vh] md:min-h-[30vh] lg:min-h-[100vh] bg-cover bg-no-repeat bg-center lg:pt-40`} style={{ backgroundImage: 'linear-gradient(rgba(0, 0, 0, .5), rgba(0, 0, 0, .5)), url(https://res.cloudinary.com/du52ca1q1/image/upload/v1721828971/vecteezy_solar-panel-on-blue-sky-background_1235999_1_nioxd2.jpg)'}}>
    <div class="w-[80%] mx-auto flex-col justify-center items-center text-white text-center lg:w-[40%]">
        <h2 class="text-[32px] leading-[32px] font-bold md:text-[60px] md:leading-[60px]">Live Green, Love Green, Think Green.</h2>
        <p class="mt-4 text-[14px] md:text-[17px]">We provide cost-effective solar energy solutions, making clean energy accessible to a wider range of customers, thereby reducing energy costs over time.</p>
        <div class="mt-10">
            <Button path="#" text="Discover more" className="py-3 px-8 text-white text-[16px] bg-green rounded-full baseline hover:bg-darkBlue" />
        </div>
    </div>
    <!-- Bottom Banner -->
     <div class="w-full h-[300px] md:h-[150px] bg-cyan-900 mt-[100px] lg:mt-[180px] flex justify-center items-center">
        <div class="w-[90%] -mt-[120px] md:w-4/5 h-[100px] grid grid-cols-2 md:grid-cols-4 md:-mt-0">
            <div class="flex flex-col justify-center items-center border-r-2 border-b-2 border-b-gray-500 border-r-gray-500 pb-5 md:pb-0 md:border-b-0">
                <span class="text-green text-[46px] font-bold"><Counter client:load from={0} to={73} />K+</span>
                <p class="text-white text-[18px] font-semibold">Happy Client</p>
            </div>
            <div class="flex flex-col justify-center items-center md:border-r-2 border-b-2 border-b-gray-500 md:border-r-gray-500 pb-5 md:pb-0 md:border-b-0">
                <span class="text-green text-center text-[46px] font-bold"><Counter client:load from={0} to={5} />K+</span>
                <p class="text-white text-[18px] font-semibold">Pro Technician</p>
            </div>
            <div class="flex flex-col justify-center items-center border-r-2 border-r-gray-500">
                <span class="text-green text-[46px] font-bold"><Counter client:load from={0} to={4} />M+</span>
                <p class="text-white text-[18px] font-semibold">Wind Farms</p>
            </div>
            <div class="flex flex-col justify-center items-center">
                <span class="text-green text-[46px] font-bold"><Counter client:load from={0} to={11} />M+</span>
                <p class="text-white text-[18px] font-semibold">Solar Farms</p>
            </div>
        </div>
     </div>
</section>