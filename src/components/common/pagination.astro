---
const { currentPage, disablePrevious, disableNext, path } = Astro.props

interface Props {
    currentPage: number;
    totalPages: number;
    disablePrevious: boolean;
    disableNext: boolean;
    path: string
}
---

<!-- Pagination -->
<div class="flex justify-between mt-10">
    <a href={`/${path}?page=${currentPage - 1}`} class={disablePrevious ? "inline-block bg-gray-100 px-3 py-2 text-gray-400 rounded-lg pointer-events-none" : "inline-block text-white bg-[#0fcc7c] px-3 py-2 hover:bg-darkBlue rounded-lg"}>
      Previous
    </a>
    <a href={`/${path}?page=${currentPage + 1}`}
    class={disableNext ? "inline-block bg-gray-100 px-3 py-2 text-gray-400 rounded-lg pointer-events-none" : "inline-block bg-[#0fcc7c] text-white px-3 py-2 hover:bg-darkBlue rounded-lg"}>
      Next
    </a>
</div>